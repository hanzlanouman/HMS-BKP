<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<GridPane fx:controller="RegisterController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center"
          hgap="10"
          vgap="10"
          padding="25">

   <Label text="Full Name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
   <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" />

   <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="1" />
   <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS" />

   <Label text="Gender" GridPane.columnIndex="0" GridPane.rowIndex="2" />
   <ComboBox fx:id="genderBox" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.hgrow="ALWAYS">
      <items>
      </items>
   </ComboBox>

   <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="3" />
   <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.hgrow="ALWAYS" />

   <Label text="Address" GridPane.columnIndex="0" GridPane.rowIndex="4" />
   <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.hgrow="ALWAYS" />

   <Button fx:id="registerButton" text="Register" GridPane.columnIndex="0" GridPane.rowIndex="5" />
   <Button fx:id="backButton" text="Back" GridPane.columnIndex="1" GridPane.rowIndex="5" />

   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" />
      <ColumnConstraints hgrow="SOMETIMES" />
   </columnConstraints>

   <rowConstraints>
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
   </rowConstraints>

</GridPane>
